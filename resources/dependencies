rule all:
    input:
        "assembly_qc",
        "ivar",
        "lmat",
        "snp_mapping",
        "trim_qc",
        "postprocessing"
    shell: "rm {input}"

rule assembly_qc:
    conda: "../conda_envs/assembly_qc.yaml"
    output: "assembly_qc"
    shell: "touch {output}"

rule ivar:
    conda: "../conda_envs/ivar.yaml"
    output: "ivar"
    shell: "touch {output}"

rule snp_mapping:
    conda: "../conda_envs/snp_mapping.yaml"
    output: "snp_mapping"
    shell: "touch {output}"

rule trim_qc:
    conda: "../conda_envs/trim_qc.yaml"
    output: "trim_qc"
    shell: "touch {output}"

rule postprocessing:
    conda: "../conda_envs/postprocessing.yaml"
    output: "trim_qc"
    shell: "touch {output}"



